<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.eidland.auxilium.voice.only">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="com.android.vending.BILLING" />

    <application
        android:name="com.eidland.auxilium.voice.only.AGApplication"
        android:allowBackup="true"
        android:icon="@mipmap/eidlandicon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name="com.eidland.auxilium.voice.only.MyProfileActivity" />
        <activity android:name="com.eidland.auxilium.voice.only.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.eidland.auxilium.voice.only.ui.WalletActivity" />
        <activity android:name="com.eidland.auxilium.voice.only.EnterRoomActivity" />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />
        <meta-data
            android:name="firebase_performance_logcat_enabled"
            android:value="true" />

        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name" />
        <activity
            android:name="com.facebook.CustomTabActivity"
            android:exported="true"/>

        <service android:name="com.eidland.auxilium.voice.only.Services.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity android:name="com.eidland.auxilium.voice.only.MyProfile" />
        <activity android:name="com.eidland.auxilium.voice.only.VerifyotpActivity" />
        <activity
            android:name="com.eidland.auxilium.voice.only.SignUpData"
            android:windowSoftInputMode="adjustPan"
            android:screenOrientation="portrait"/>

        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
        <activity android:name="com.eidland.auxilium.voice.only.ui.MainActivity" />
        <activity android:name="com.eidland.auxilium.voice.only.Sign_Up_Activity" />
        <activity
            android:name="com.eidland.auxilium.voice.only.ui.LiveRoomActivity"
            android:launchMode="singleTask"
            android:parentActivityName="com.eidland.auxilium.voice.only.ui.MainActivity"
            android:screenOrientation="portrait"

            android:windowSoftInputMode="adjustPan" />
    </application>

</manifest>