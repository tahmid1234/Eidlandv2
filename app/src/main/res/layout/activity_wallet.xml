<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121318"
    tools:context="com.eidland.auxilium.voice.only.activity.WalletActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/lrnt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="101dp"
                android:gravity="center">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/userimg"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_coin" />


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/lrnname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lrnt"
                android:layout_marginTop="10dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/txtname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunitosemibold"
                    android:text="1000"
                    android:textColor="#fff"
                    android:textSize="54sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/lrnfigures"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@id/lrnname"
                android:orientation="horizontal"
                android:visibility="visible"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"

                    android:gravity="top"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtcoins"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunitosemibold"
                        android:gravity="center"
                        android:text="Coins"
                        android:textColor="#FD9F35"
                        android:textSize="24sp" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lrnfigures"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/buy50"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"

                    android:layout_marginStart="40dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_fi_rr_coin_5"
                        android:contentDescription="TODO"
                        android:gravity="center"
                        android:padding="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="15dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/nunitosemibold"
                        android:gravity="center|left"
                        android:lineHeight="24dp"
                        android:text="50"
                        android:textColor="#fff"
                        android:textSize="18sp" />

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="25dp"
                        android:background="@drawable/ic_buy_button_0"

                        android:contentDescription="TODO"
                        android:gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/buy350"
                    android:layout_width="match_parent"

                    android:layout_height="50dp"
                    android:layout_marginStart="40dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_fi_rr_coin_5"
                        android:contentDescription="TODO"
                        android:gravity="center"
                        android:padding="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="15dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/nunitosemibold"
                        android:gravity="center|left"
                        android:lineHeight="24dp"
                        android:text="350"
                        android:textColor="#fff"
                        android:textSize="18sp" />

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"

                        android:layout_marginEnd="25dp"
                        android:background="@drawable/ic_buy_button_4d"

                        android:contentDescription="TODO"
                        android:gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/buy1000n"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"

                    android:layout_marginStart="40dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_fi_rr_coin_5"
                        android:contentDescription="TODO"
                        android:gravity="center"
                        android:padding="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="15dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/nunitosemibold"
                        android:gravity="center|left"
                        android:lineHeight="24dp"
                        android:text="1,000"
                        android:textColor="#fff"
                        android:textSize="18sp" />

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"

                        android:layout_marginEnd="25dp"
                        android:background="@drawable/ic_buy_button_2d"

                        android:contentDescription="TODO"
                        android:gravity="center" />
                </LinearLayout>



            </LinearLayout>


        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:id="@+id/backtoprofile"
        android:layout_marginStart="10dp"
        android:gravity="center"

        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/wallet_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="15dp"
            android:src="@drawable/ic_baseline_arrow_back_24" />
    </RelativeLayout>
</RelativeLayout>