<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/ic_rectangle_18"
    android:orientation="vertical"
    android:layout_height="match_parent"

    tools:context="com.eidland.auxilium.voice.only.activity.EnterRoomActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:id="@+id/backtoprofile"
        android:layout_marginStart="10dp"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:text="Create Room"
            android:gravity="center"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="22sp"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="15dp"
            android:src="@drawable/ic_baseline_arrow_back_24" />
    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:orientation="vertical"
        android:gravity="center"
        >
        <ImageView
            android:src="@drawable/appicon"
            android:layout_width="118dp"
            android:layout_height="118dp"
            android:scaleType="centerCrop"
            android:id="@+id/userimage"
            android:contentDescription="TODO"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="-32dp">
            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="80dp"
                android:background="@drawable/ic_upload_photo_button"
                >

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="10dp"
                    android:gravity="center"
                    android:onClick="ChangeImage"
                    android:contentDescription="TODO" />
            </LinearLayout>
        </RelativeLayout>

        <EditText
            android:id="@+id/txttitle"
            android:layout_width="260dp"
            android:layout_height="41dp"

            android:layout_marginHorizontal="2dp"
            android:layout_marginTop="30dp"
            android:paddingStart="10dp"
            android:background="@drawable/ic_background"
            android:drawableEnd="@drawable/ic_fi_rr_pencil_1"
            android:hint="Add Title to party"
            android:textColorHint="#808080"
            android:textColor="@color/white"
            android:textSize="18sp"
            tools:ignore="RtlSymmetry" />

        <EditText
            android:id="@+id/welcomeMessage"
            android:layout_width="260dp"
            android:layout_height="41dp"
            android:paddingStart="10dp"
            android:layout_marginHorizontal="2dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/ic_background"
            android:hint="Add a welcome message"
            android:textColorHint="#808080"
            android:drawableEnd="@drawable/ic_fi_rr_pencil_1"
            android:textColor="@color/white"
            android:visibility="visible"
            android:textSize="18sp"
            tools:ignore="RtlSymmetry" />

        <EditText
            android:id="@+id/offTimeMsg"
            android:layout_width="260dp"
            android:layout_height="41dp"
            android:paddingStart="10dp"
            android:layout_marginHorizontal="2dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/ic_background"
            android:hint="Message for closed room"
            android:textColorHint="#808080"
            android:drawableEnd="@drawable/ic_fi_rr_pencil_1"
            android:textColor="@color/white"
            android:visibility="visible"
            android:textSize="18sp"
            tools:ignore="RtlSymmetry" />

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonstyel"
        android:text="Create Room"
        android:layout_gravity="center"
        android:textColor="#fff"
        android:id="@+id/btncreate"
        android:paddingHorizontal="40dp"
        android:layout_margin="20dp"/>
</LinearLayout>