<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_height="match_parent"

    tools:context="com.eidland.auxilium.voice.only.activity.EnterRoomActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:text="Create Room"
            android:gravity="center"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="22sp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="12sp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingHorizontal="10dp"
            tools:context="com.eidland.auxilium.voice.only.activity.ProfileEditActivity">

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:cardCornerRadius="15dp">

                <ImageView
                    android:src="@drawable/appicon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:id="@+id/userimage"
                    android:contentDescription="TODO"></ImageView>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_marginHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:orientation="vertical">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:hint="Add Title to party"
                    android:gravity="left"
                    android:textColor="#000"
                    android:padding="20dp"
                    android:background="@android:color/transparent"

                    android:id="@+id/txttitle"></EditText>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:src="@drawable/micimgpng"
        android:scaleType="centerCrop"
        android:contentDescription="TODO" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonstyel"
        android:text="Create Room"
        android:textColor="#fff"
        android:id="@+id/btncreate"
        android:paddingHorizontal="40dp"
        android:layout_margin="20dp" />
</LinearLayout>