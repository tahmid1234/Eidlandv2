<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/chatroom_background"
    android:layout_gravity="center"
    android:weightSum="3"
    android:orientation="vertical"
    tools:context="com.eidland.auxilium.voice.only.activity.SplashActivity">
    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="0dp"
        android:layout_weight="1">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="2"

        android:gravity="top|center">


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="180dp"
            android:layout_height="58dp"


            android:layout_alignParentTop="true"
            android:background="@drawable/ic_el_logo"
            android:gravity="center_horizontal|center_vertical"
            android:scaleType="centerCrop"
            android:contentDescription="TODO" />

        <TextView
            style="@style/go_far_with"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"

            android:layout_gravity="center"
            android:gravity="center_horizontal|center_vertical"
            android:text="Go far with your voice " />
    </LinearLayout>
</LinearLayout>