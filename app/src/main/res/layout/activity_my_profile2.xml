                            android:drawablePadding="10dp"
                            android:fontFamily="@font/open_sans_bold"
                            android:gravity="center"
                            android:padding="5dp"

                            android:text="100"
                            android:textAlignment="center"
                            android:textColor="@color/white"

                            android:textSize="20sp">

                        </TextView>

                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
