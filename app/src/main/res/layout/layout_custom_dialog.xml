<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/alert_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#121318"
    android:gravity="center"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/dialog_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="title"
        android:layout_margin="10dp"
        android:fontFamily="@font/nunitosemibold"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:layout_gravity="left" />

    <TextView
        android:id="@+id/msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:fontFamily="@font/interregular"
        android:gravity="center"
        android:text="Message sadfsadf sad fs daf sdf sd fsd fsad fsdf sd f s"
        android:textColor="#ffffff"
        android:textSize="16dp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:id="@+id/topdialogbutton"

        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/positive_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/interregular"
            android:text="Message"
            android:textColor="#C551F6"
            android:textSize="14dp"
            android:textStyle="bold"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:id="@+id/bottomdialogbutton"

        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/negative_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/interregular"
            android:text="Cancel"
            android:textColor="#888888"
            android:textSize="14dp"
            android:visibility="gone" />
    </RelativeLayout>


</LinearLayout>